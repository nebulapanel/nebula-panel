[Unit]
Description=Nebula Panel Worker
After=network.target nebula-agent.service
Requires=nebula-agent.service

[Service]
Type=simple
User=nebula
Group=nebula
EnvironmentFile=/etc/nebula-panel/secrets.env
ExecStart=/usr/local/bin/nebula-worker
Restart=always
RestartSec=3
WorkingDirectory=/var/lib/nebula-panel

[Install]
WantedBy=multi-user.target
