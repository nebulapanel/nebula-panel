[Unit]
Description=Nebula Panel Web
After=network.target nebula-api.service
Requires=nebula-api.service

[Service]
Type=simple
User=nebula
Group=nebula
EnvironmentFile=/etc/nebula-panel/secrets.env
WorkingDirectory=/opt/nebula-panel/apps/web
ExecStart=/usr/bin/npm start -- --hostname 127.0.0.1 --port 3000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
